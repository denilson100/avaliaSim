<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="border-bottom: 5px solid #004B47; background: #fff; padding:20px 0 5px 0;">
        <div class="container" style="font-size: 18px;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/images/avaliasim.png" width="50%" onclick="" />
            </div>
            <div class="navbar-collapse collapse" style="margin-top: 50px; color: #004B47;">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Listar", "GetAllAvaliacoes", "Avaliacao")</li>
                    <li>@Html.ActionLink("Criar Avaliação", "Create", "Avaliacao")</li>
                    @using (Html.BeginForm("ListBuscaPorNome", "Avaliacao", null, FormMethod.Post, new { @class = "navbar-form navbar-left", role = "search" }))
                    {
                        <div class="form-group">
                            <input type="text" id="nome" name="nome" class="form-control" placeholder="Nome">
                        </div>
                        <button type="submit" class="btn btn-default">Buscar</button>
                    }
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="background: #004B47; color: #fff; padding:30px; float:left; width: 100%; z-index:99999;">
            <p>AvaliaSim &copy; @DateTime.Now.Year Todos os direitos reservados.</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
